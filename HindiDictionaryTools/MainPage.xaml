<Page
    x:Class="HindiDictionaryTools.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HindiDictionaryTools"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:toolkit="using:MyToolkit.Controls"
    mc:Ignorable="d">

    <Page.DataContext>
        <local:HindiDictionary/>
    </Page.DataContext>
    
    <Page.Resources>
        <SolidColorBrush x:Key="SE-DarkGray" Color="#262626"/>
        <SolidColorBrush x:Key="SE-Yellow" Color="#ffde00"/>
        <SolidColorBrush x:Key="SE-OffWhite" Color="WhiteSmoke"/>

        <Style TargetType="TextBox">
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Foreground="{StaticResource SE-OffWhite}" Text="{Binding}"></TextBlock>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <local:PartsOfSpeechConverter x:Key="POSConverter"/>

    </Page.Resources>
    
    <Grid Background="{StaticResource SE-DarkGray}">

        <Grid.RowDefinitions>
            <RowDefinition Height="375"/>
            <RowDefinition Height="4"/>
            <RowDefinition Height="*"/> 
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="4"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Hindi Dictionary Tools v0.00.07 6/20/17" Margin="10" Foreground="{StaticResource SE-Yellow}"/>
                <TextBox Name="NewTermEntryField" Margin="10" Foreground="{StaticResource SE-OffWhite}" Header="Hindi Term"/>
                <TextBox Name="NewTranslationEntryField" Margin="10" Height="100" Foreground="{StaticResource SE-OffWhite}" Header="Translation"/>
                <Button Content="Add Translation" Margin="10" Click="AddNewTranslation_Click" Foreground="{StaticResource SE-OffWhite}" BorderBrush="{StaticResource SE-Yellow}" BorderThickness="1"
                        IsEnabled="{x:Bind IsAddTranslationEnabled, Mode=OneWay}"/>
                <Button Content="Import From File" Margin="10" Foreground="{StaticResource SE-OffWhite}" BorderBrush="{StaticResource SE-Yellow}" BorderThickness="1"
                        Click="{x:Bind CurrentDictionary.ImportTranslationsFromFile}"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Vertical">
                <TextBlock Text="" Margin="10"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="10" Text="Total Translations: " Foreground="{StaticResource SE-OffWhite}"/>
                    <TextBlock Margin="10" Text="{x:Bind CurrentDictionary.Dictionary.Count, Mode=OneWay}" Foreground="{StaticResource SE-Yellow}"/>
                </StackPanel>
                <Button Content="Clear Database" Margin="10" Foreground="{StaticResource SE-OffWhite}" BorderBrush="{StaticResource SE-Yellow}" BorderThickness="1"
                        Click="{x:Bind CurrentDictionary.DeleteAllTranslations}"/>
            </StackPanel>

            <controls:GridSplitter Grid.Column="2" Width="4" VerticalAlignment="Stretch" 
                               ResizeBehavior="PreviousAndNext"  ResizeDirection="Columns" Background="Black">
                <controls:GridSplitter.Element>
                    <Grid>
                        <TextBlock HorizontalAlignment="Center" IsHitTestVisible="False" VerticalAlignment="Center"
                               Text="&#xE784;" Foreground="{StaticResource SE-Yellow}" FontFamily="Segoe MDL2 Assets"/>
                    </Grid>
                </controls:GridSplitter.Element>

            </controls:GridSplitter>

            <ScrollViewer Grid.Column="3">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Vertical">
                        <TextBlock Text="" Margin="10"/>
                        <TextBox Name="CurrentTermField" Margin="10" Width="325" HorizontalAlignment="Left" Foreground="{StaticResource SE-OffWhite}" Header="Hindi Term" IsSpellCheckEnabled="False"
                                     Text="{x:Bind CurrentDictionary.CurrentTranslation.Term, Mode=TwoWay}" IsEnabled="{x:Bind CurrentDictionary.IsCurrentTranslationSelected, Mode=OneWay}"/>
                        <TextBox Name="CurrentImportedTranslationField" Margin="10" Width="325" HorizontalAlignment="Left" Foreground="{StaticResource SE-OffWhite}" Header="Translation" IsSpellCheckEnabled="False"
                                     Text="{x:Bind CurrentDictionary.CurrentTranslation.ImportedTranslation, Mode=TwoWay}" IsEnabled="{x:Bind CurrentDictionary.IsCurrentTranslationSelected, Mode=OneWay}"/>
                        <TextBox Name="CurrentUserTranslationField" Margin="10" Width="325" HorizontalAlignment="Left" Foreground="{StaticResource SE-OffWhite}" Header="User Translation" IsSpellCheckEnabled="False"
                                     Text="{x:Bind CurrentDictionary.CurrentTranslation.UserTranslation, Mode=TwoWay}" IsEnabled="{x:Bind CurrentDictionary.IsCurrentTranslationSelected, Mode=OneWay}"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Name="CurrentGoogleTranslationField" Margin="10" Width="325" HorizontalAlignment="Left" Foreground="{StaticResource SE-OffWhite}" Header="Google Translation" IsSpellCheckEnabled="False" IsReadOnly="True"
                                     Text="{x:Bind CurrentDictionary.CurrentTranslation.GoogleTranslation, Mode=OneWay}" IsEnabled="{x:Bind CurrentDictionary.IsCurrentTranslationSelected, Mode=OneWay}"/>
                            <Button Content="Refresh" Margin="10,38,10,10" Click="{x:Bind CurrentDictionary.UpdateCurrentGoogleTranslation}" IsEnabled="{x:Bind CurrentDictionary.IsCurrentTranslationSelected, Mode=OneWay}"
                                    Foreground="{StaticResource SE-OffWhite}" BorderBrush="{StaticResource SE-Yellow}" BorderThickness="1"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Vertical">
                        <TextBlock Text="" Margin="10"/>
                        <ComboBox Name="posCombo" Margin="10" Header="Part of Speech" Foreground="{StaticResource SE-OffWhite}"
                                  SelectedItem="{Binding CurrentTranslation.PartOfSpeech, Mode=TwoWay}">
                        </ComboBox>

                        <StackPanel Orientation="Horizontal">
                            <Button Content="Update" Margin="10" IsEnabled="{x:Bind CurrentDictionary.IsCurrentTranslationSelected, Mode=OneWay}" Foreground="{StaticResource SE-OffWhite}" BorderBrush="{StaticResource SE-Yellow}" BorderThickness="1"
                                Click="{x:Bind CurrentDictionary.UpdateCurrentTranslation}"/>
                            <Button Content="Delete" Margin="10" IsEnabled="{x:Bind CurrentDictionary.IsCurrentTranslationSelected, Mode=OneWay}" Foreground="{StaticResource SE-OffWhite}" BorderBrush="{StaticResource SE-Yellow}" BorderThickness="1"
                                Click="{x:Bind CurrentDictionary.DeleteCurrentTranslation}"/>
                        </StackPanel>
                        
                        

                    </StackPanel>

                </Grid>
            </ScrollViewer>

        </Grid>

        <controls:GridSplitter Grid.Row="1" Height="4" HorizontalAlignment="Stretch" 
                               ResizeBehavior="PreviousAndNext" ResizeDirection="Rows" Background="Black">
            <controls:GridSplitter.Element>
                <Grid>
                    <TextBlock HorizontalAlignment="Center" IsHitTestVisible="False" VerticalAlignment="Center"
                               Text="&#xE784;" Foreground="{StaticResource SE-Yellow}" FontFamily="Segoe MDL2 Assets"/>
                </Grid>
            </controls:GridSplitter.Element>

        </controls:GridSplitter>
        
        <Grid Grid.Row="2">

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0">
                <AutoSuggestBox Name="SearchBox" PlaceholderText="Search Translations" Margin="10" Width="400" KeyDown="SearchBox_KeyDown"/>
                <Button Name="SearchButton" Content="Search" Margin="10" Foreground="{StaticResource SE-OffWhite}" BorderBrush="{StaticResource SE-Yellow}" BorderThickness="1"
                        Click="Search_Clicked"/>
            </StackPanel>
            
            <toolkit:DataGrid x:Name="TranslationListView" Margin="10" Grid.Row="1" SelectionMode="Single" HorizontalContentAlignment="Stretch" 
                              ItemsSource="{x:Bind CurrentDictionary.Dictionary, Mode=OneWay}" SelectedItem="{x:Bind CurrentDictionary.CurrentTranslation, Mode=TwoWay}"
                              toolkit:DataGridExtensions.UseSingleSelectionAndDeselection="False"
                              HeaderBackground="Transparent" RowBackgroundOddBrush="#373737" RowBackgroundEvenBrush="#474747" FontFamily="Nirmala UI">

                <toolkit:DataGrid.Columns>

                    <toolkit:DataGridTextColumn Width="2*" Binding="{Binding Term}" IsAscendingDefault="True" Foreground="{StaticResource SE-OffWhite}">
                        <toolkit:DataGridTextColumn.Header>
                            <TextBlock Text="Term" Foreground="{StaticResource SE-Yellow}" FontSize="14" FontFamily="Nirmala UI"/>
                        </toolkit:DataGridTextColumn.Header>
                    </toolkit:DataGridTextColumn>

                    <toolkit:DataGridTextColumn Width="2*" Binding="{Binding ImportedTranslation}" IsAscendingDefault="False" Foreground="{StaticResource SE-OffWhite}">
                        <toolkit:DataGridTextColumn.Header>
                            <TextBlock Text="Translation" Foreground="{StaticResource SE-Yellow}" FontSize="14" FontFamily="Nirmala UI"/>
                        </toolkit:DataGridTextColumn.Header>
                    </toolkit:DataGridTextColumn>

                    <toolkit:DataGridTextColumn Width="2*" Binding="{Binding UserTranslation}" IsAscendingDefault="False" Foreground="{StaticResource SE-OffWhite}">
                        <toolkit:DataGridTextColumn.Header>
                            <TextBlock Text="User Translation" Foreground="{StaticResource SE-Yellow}" FontSize="14" FontFamily="Nirmala UI"/>
                        </toolkit:DataGridTextColumn.Header>
                    </toolkit:DataGridTextColumn>

                    <toolkit:DataGridTextColumn Width="2*" Binding="{Binding GoogleTranslation}" IsAscendingDefault="False" Foreground="{StaticResource SE-OffWhite}">
                        <toolkit:DataGridTextColumn.Header>
                            <TextBlock Text="Google Translation" Foreground="{StaticResource SE-Yellow}" FontSize="14" FontFamily="Nirmala UI"/>
                        </toolkit:DataGridTextColumn.Header>
                    </toolkit:DataGridTextColumn>

                    <toolkit:DataGridTextColumn Width="1*" Binding="{Binding PartOfSpeech, Converter={StaticResource POSConverter}}" IsAscendingDefault="False" Foreground="{StaticResource SE-OffWhite}">
                        <toolkit:DataGridTextColumn.Header>
                            <TextBlock Text="PoS" Foreground="{StaticResource SE-Yellow}" FontSize="14" FontFamily="Nirmala UI"/>
                        </toolkit:DataGridTextColumn.Header>
                    </toolkit:DataGridTextColumn>

                </toolkit:DataGrid.Columns>
              
            </toolkit:DataGrid>
            
            
            
        </Grid>
        
    </Grid>
</Page>
